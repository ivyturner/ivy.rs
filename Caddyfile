# this will only work on my vps.. sorry lol

ivy.houseplants.cloud {
	root * /opt/sites/ivy.rs/dist
	file_server

	 handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
	}

    import ./redirects.caddyfile

    log {
		output file /var/log/ivy.rs.log
	}
}