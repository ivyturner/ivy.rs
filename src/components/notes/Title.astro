---
import Date from "../util/Date.astro";
const { title, date } = Astro.props;
---

<h2>{()=>{
    if (title) {
    return (
      <span class="text-xl">
        A note titled {title} (<Date showTime date={date} />)
      </span>
    );
  } else {
    return (
      <span class="text-lg">
        A note from
        <Date showTime date={date} />
      </span>
    );
  }
}}</h2>